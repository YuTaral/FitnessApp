<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/exercise_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exercise_expand_collapse_symbol"
        tools:text="Wide pull ups" />

    <ImageView
        android:id="@+id/exercise_expand_collapse_symbol"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/icon_collapse"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="@+id/exercise_name_txt"
        app:layout_constraintBottom_toBottomOf="@+id/exercise_name_txt"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/exercise_description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/exercise_name_txt"
        tools:text="Stand under the pull-up bar and grab it with both hands wider than shoulder-width apart. Use an overhand grip (palms facing away from you)."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_description_txt"/>

</androidx.constraintlayout.widget.ConstraintLayout>