<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/background_rounded_button</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <style name="CircleCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/button_checkbox</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="MenuItemStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomCalenderStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:dateTextAppearance">@color/white</item>
        <item name="android:weekDayTextAppearance">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CustomTimePickerStyle" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/black</item>
        <item name="clockHandColor">@color/colorAccent</item>
        <item name="clockNumberTextColor">@color/white</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="InputLessPadding" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:padding">3dp</item>
    </style>

</resources>