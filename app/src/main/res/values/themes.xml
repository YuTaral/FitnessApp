<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FitnessApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="alertDialogTheme">@style/Theme.FitnessApp.AlertDialog</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="Theme.FitnessApp.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/colorDialogBackground</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:background">@drawable/alert_dialog_border</item>
    </style>
</resources>